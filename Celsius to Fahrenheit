using namespace std;

//System Libraries
#include <iostream> //Input/Output stream Library
#include <iomanip>  //format the output of the degrees


//User Libraries

//Global Constants

//Function Prototypes

//Execution begins here
int main(int argc, char** argv) {
    //Declare Variables
    float cels; //temperture in celsius to be converted
    float fahr; //temperture in fahrenheit
    
    //Initialize Variables
    cout<<"Enter a temperture in Celsius"<<endl;
    cin>>cels;
    fahr = (9/5.0)*cels + 32;
    
    //Output the results
    cout<<fixed<<setprecision(1)<<showpoint;
    cout<<endl<<cels<<" degrees Celsius is equal to "<<fahr<<" degrees Fahrenheit"<<endl;
    
    //Exit stage right!
    return 0;
    }


 * Purpose: Create a program that will
 * convert U.S. dollar amounts to Japanese
 * yen and euros
 */
 
using namespace std;

//System Libraries
#include <iostream> //Input/Output stream Library
#include <iomanip>  //format the output of the degrees


//User Libraries

//Global Constants

//Function Prototypes

//Execution begins here
int main(int argc, char** argv) {
    //Declare Variables
    const float yen = 120.53; //value of 1 dollar relative to yen
    const float euro = 0.88; //value of 1 dollar relative to euros
    float dolls;             //user input for dollars
    
    //Intialize variables
    cout<<"Enter in U.S. dollar amount"<<endl;
    cin>>dolls; //obtain dollar amount from user
    
    //Output the results
    cout<<endl<<fixed<<setprecision(2)<<showpoint; //format output to two decimal places
    
    cout<<"Your value in Euros is "<<dolls*euro<<endl; //Output euro conversion
    cout<<"Your value in Yen is "<<dolls*yen<<endl;    //Output yen conversion 
    
    //Exit the stage right!
    return 0;
}
